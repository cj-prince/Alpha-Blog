<p id="notice"><%= notice %></p>

<h2 align="center"><strong>Title:</strong><%= @article.title %> </h2>


<div class="well col-xs-8 col-xs-offset-2">
  <h4><strong>Description:</strong></h4>
   <hr> 
   <%= simple_format(@article.description) %>
</div>
<div class="articles-action">
  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-primary" %> |
  <%= link_to 'Destroy', article_path(@article), method: :delete, 
                          data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %> |
  <%= link_to 'Back', articles_path, class: "btn btn-success" %>  
</div>

