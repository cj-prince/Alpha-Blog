<p id="notice"><%= notice %></p>

<h1 align='center'>All Alpha-Blogs</h1>
<div align='center'>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row col-sm-6">
        <div class="card">
          <div class="card-body">
            <li><%= link_to gravtar_for(user), user_path(user) %></li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li><small><%= pluralize(user.articles.count, "articles") if user.articles %></small></li>
          </div>
        </div>
      </div>  
    </ul>
  <% end %>
</div>
<br>

<%= link_to 'New User', new_user_path %>
