<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div class='row' id="error_explanation">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
            <div class="panel-body">
              <ul>
                <% article.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title of article" %>
  </div></br>

  <div class="row">
    <%= form.label :description %>
    <%= form.text_area :description, rows:12, class: "form-control", placeholder: "Artical Description" %>
  </div></br>

  <div class="form-group">
    <div class="col-sm-10">
      <%= form.submit class: 'btn btn-primary'%>
    </div> 
  </div></br>
<% end %>

