<p id="notice"><%= notice %></p>

<h2 align="center"><strong>Title:</strong><%= @article.title %> </h2>


<div class="card">
  <ul class="listing">
    <div class="row col-sm-6">
      <div class="row center">
        <div class="card-body">
          <li>Created by</li>
          <li><%= link_to gravtar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li><small><%= pluralize(@article.user.articles.count, "articles") if @article.user.articles %></small></li>
        </div>
      </div>
    </div>  
  </ul>
  <h4><strong>Description:</strong></h4>
  <hr> 
  <%= simple_format(@article.description) %>
  <div class="articles-action">
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-primary" %> |
    <%= link_to 'Destroy', article_path(@article), method: :delete, 
                            data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %> |
    <%= link_to 'Back', articles_path, class: "btn btn-success" %>  
  </div>
</div></br>


