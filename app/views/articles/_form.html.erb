    <%= form.label :description %>
    <%= form.text_area :description, rows:12, class: "form-control", placeholder: "Artical Description" %>
  </div></br>

  <div class="form-group">
    <div class="col-sm-10">
      <%= form.submit class: 'btn btn-primary'%>
    </div> 
  </div></br>
<% end %>

